<Window x:Class="Diary.App.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Diary.App.ViewModels"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="300">
    <Window.DataContext>
        <local:LoginViewmodel></local:LoginViewmodel>
    </Window.DataContext>
    <StackPanel VerticalAlignment="Center">
        <Image></Image>
        <StackPanel>
            <Label Content="Username"></Label>
            <TextBox Text="{Binding Username, Mode=TwoWay}"></TextBox>
        </StackPanel>
        <StackPanel>
            <Label Content="Password"></Label>
            <TextBox Text=""></TextBox>
        </StackPanel>
        <Button Command="{Binding}">EZZZZ</Button>
    </StackPanel>
</Window>
